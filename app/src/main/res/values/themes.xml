<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstaGraph" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/Theme.InstaGraph.Button</item>
    </style>

    <!--Theme for title-->
    <style name="Theme.InstaGraph.Title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/title_margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <!--Theme for logo-->
    <style name="Theme.InstaGraph.Logo">
        <item name="android:layout_width">@dimen/logo_width</item>
        <item name="android:layout_height">@dimen/logo_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/instagraph_logo</item>
        <item name="android:layout_below">@id/title</item>
        <item name="android:layout_marginTop">@dimen/title_and_logo_gap</item>
    </style>

    <!--Theme for information button-->
    <style name="Theme.InstaGraph.Info.Button" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">@dimen/info_button_height</item>
        <item name="android:layout_height">@dimen/info_button_height</item>
        <item name="android:background">@drawable/instagraph_info</item>
        <item name="android:layout_below">@id/title</item>
        <item name="android:layout_toEndOf">@id/logo</item>
        <item name="android:layout_marginTop">@dimen/title_and_info_button_gap</item>
        <item name="android:contentDescription">@string/empty_content_description</item>
    </style>

    <!--Theme for info window-->
    <style name="Theme.InstaGraph.Text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/instagraph_text_background</item>
        <item name="android:textSize">@dimen/popup_text</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/popup_padding</item>
    </style>

    <!--Theme for progress bar-->
    <style name="Theme.InstaGraph.Progress.Bar" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/progress_bar_width</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@id/popup_textview</item>
        <item name="android:layout_marginTop">@dimen/progress_bar_marginTop</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--Theme for RelativeLayout containing progress circles-->
    <style name="Theme.InstaGraph.Progress.Layout" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignTop">@id/progress_background</item>
        <item name="android:layout_marginTop">@dimen/progress_background_and_circles_gap</item>

    </style>

    <!--Theme for progress circle-->
    <style name="Theme.InstaGraph.Step.Circle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/step_circle_size</item>
        <item name="android:layout_height">@dimen/step_circle_size</item>
        <item name="android:background">@drawable/instagraph_step_circle</item>
        <item name="android:textSize">@dimen/step_circle_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Theme for focused progress circle-->
    <style name="Theme.InstaGraph.Step.Circle.Focused" parent="Theme.InstaGraph.Step.Circle">
        <item name="android:background">@drawable/instagraph_step_circle_focused</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Theme for step text-->
    <style name="Theme.InstaGraph.Step.Text" parent="Widget.AppCompat.TextView">
        <item name="android:id">@id/step_text</item>
        <item name="android:layout_width">@dimen/step_text_width</item>
        <item name="android:layout_height">@dimen/step_text_height</item>
        <item name="android:background">@drawable/instagraph_step_text</item>
        <item name="android:textSize">@dimen/step_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/step_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/step_text_margin_start</item>
    </style>

    <!--Theme for buttons-->
    <style name="Theme.InstaGraph.Button" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/instagraph_button</item>
    </style>

    <!--Theme for big buttons-->
    <style name="Theme.InstaGraph.Button.Big" parent="Theme.InstaGraph.Button">
        <item name="android:layout_width">@dimen/big_button_width</item>
        <item name="android:layout_height">@dimen/big_button_height</item>
        <item name="android:textSize">@dimen/big_button_text</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/step_text_margin_top</item>
    </style>

    <!--Theme for small buttons-->
    <style name="Theme.InstaGraph.Button.Small" parent="Theme.InstaGraph.Button">
        <item name="android:layout_width">@dimen/small_button_width</item>
        <item name="android:layout_height">@dimen/small_button_height</item>
        <item name="android:textSize">@dimen/small_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!--Theme for back buttons on step pages-->
    <style name="Theme.InstaGraph.Button.Small.Back" parent="Theme.InstaGraph.Button.Small">
        <item name="android:text">@string/back_button_text</item>
        <item name="android:contentDescription">@string/back_button_content</item>
    </style>

    <!--Theme for next buttons on step pages-->
    <style name="Theme.InstaGraph.Button.Small.Next" parent="Theme.InstaGraph.Button.Small">
        <item name="android:text">@string/next_button_text</item>
        <item name="android:contentDescription">@string/next_button_content</item>
        <item name="android:layout_toEndOf">@id/back</item>
        <item name="android:layout_marginStart">@dimen/back_and_next_gap</item>
    </style>

    <!--Theme for download icons background-->
    <style name="Theme.InstaGraph.Download.Icon.Background" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/download_icon_background_width</item>
        <item name="android:layout_height">@dimen/download_icon_background_height</item>
        <item name="android:background">@drawable/instagraph_text_background</item>
    </style>

    <!--Theme for download icons-->
    <style name="Theme.InstaGraph.Download.Icon" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/download_icon_width</item>
        <item name="android:layout_height">@dimen/download_icon_height</item>
        <item name="android:layout_below">@id/step_text</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignEnd">@id/icons_background</item>
        <item name="android:layout_marginEnd">@dimen/jpg_icon_marginEnd</item>
    </style>

    <!--Theme for data windows-->
    <style name="Theme.InstaGraph.Data.Window" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/data_window_width</item>
        <item name="android:layout_height">@dimen/data_window_height</item>
        <item name="android:background">@drawable/instagraph_data_window</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_below">@id/download_icons</item>
    </style>

    <!--Theme for URL input-->
    <style name="Theme.InstaGraph.Input.URL" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/input_text</item>
        <item name="android:inputType">textUri</item>
        <item name="android:layout_below">@id/step_text</item>
        <item name="android:layout_marginTop">@dimen/step_text_and_url_input_gap</item>
        <item name="android:layout_alignStart">@id/step_text</item>
        <item name="android:layout_alignEnd">@id/step_text</item>
    </style>

    <!--Theme for visualisation windows-->
    <style name="Theme.InstaGraph.Visualisation.Window" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">@dimen/visualisation_window_width</item>
        <item name="android:layout_height">@dimen/visualisation_window_height</item>
        <item name="android:background">@drawable/instagraph_visualisation_background</item>
    </style>

    <!--Theme for visualisation border-->
    <style name="Theme.InstaGraph.Visualisation.Border" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">@dimen/visualisation_window_width</item>
        <item name="android:layout_height">@dimen/visualisation_window_height</item>
        <item name="android:background">@drawable/instagraph_visualisation_background_focused</item>
        <item name="android:visibility">invisible</item>
    </style>

    <!--Theme for visualisation text-->
    <style name="Theme.InstaGraph.Visualisation.Text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/visualisation_window_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/instagraph_text_background</item>
        <item name="android:textSize">@dimen/visualisation_text</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/visualisation_text_padding</item>
    </style>

    <!--Theme for column text-->
    <style name="Theme.InstaGraph.Column.Text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/column_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/instagraph_text_background</item>
        <item name="android:textSize">@dimen/column_text</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/visualisation_text_padding</item>
        <item name="android:layout_marginEnd">@dimen/column_text_and_spinner_gap</item>
    </style>

    <!--Theme for spinners-->
    <style name="Theme.InstaGraph.Column.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">@dimen/spinner_width</item>
        <item name="android:layout_height">@dimen/spinner_height</item>
        <item name="android:background">@drawable/instagraph_spinner_background</item>
    </style>

    <!--Theme for parameter input-->
    <style name="Theme.InstaGraph.Input.Parameter" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/input_text</item>
    </style>

</resources>